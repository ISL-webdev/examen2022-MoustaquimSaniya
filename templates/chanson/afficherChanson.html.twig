{% extends 'base.html.twig' %}

{# vue affichage du d√©tail d'une chanson #}

{% block title %}Affichage de la chanson no. {{ chanson.id }}{% endblock %}

{% block body %}

    <div class="container">
        <h1>Titre de la chanson : {{ chanson.titre }}</h1>
        <h3>Album : {{ chanson.nomAlbum }}</h3>
        <p>Auteur : {{ chanson.auteur }}</p>
        <p>Date d'ajout : {{ chanson.dateAjout|date("d/m/Y") }}</p>
        <p>Date de sortie : {{ chanson.dateSortie|date("d/m/Y") }}</p>
        <p>Genre : {{ chanson.genre }}</p>

        <p>Paroles : {{ chanson.paroles }}</p>
        <a href="{{ path('modifier_chanson', {id: chanson.id}) }}">Modifier la chanson</a>
        <br>
        <a href="{{ path('supprimer_chanson', {id: chanson.id}) }}">Supprimer la chanson</a>


    </div>
{% endblock %}
